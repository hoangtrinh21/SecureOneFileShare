modules = ["java", "java-17", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "OneShot File Sharing App"

[[workflows.workflow]]
name = "OneShot File Sharing App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run -Dspring-boot.run.arguments=\"--server.port=5000\""
waitForPort = 5000

[deployment]
run = ["sh", "-c", "mvn spring-boot:run -Dspring-boot.run.arguments=\"--server.port=5000\""]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 35729
externalPort = 80
